generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Geo
model Country {
  id   String @id @default(uuid())
  name String
}

model Region {
  id   String @id @default(uuid())
  name String
}

model City {
  id   String @id @default(uuid())
  name String
}

// Organization
model Company {
  id   String @id @default(uuid())
  name String
}

model Department {
  id   String @id @default(uuid())
  name String
}

model Position {
  id   String @id @default(uuid())
  name String
}

// Base
model Phone {
  id       String @id @default(uuid())
  personal String
  work     String
  mobile   String
}

model Address {
  id         String @id @default(uuid())
  countryId  String
  regionId   String
  cityId     String
  street     String
  building   Int
  appartment Int
}

model User {
  id           String @id @default(uuid())
  firstName    String
  midName      String
  lastName     String
  email        String @unique
  companyId    Int
  departmentId Int
  positionId   Int
  addressId    Int
  phoneId      String
}
